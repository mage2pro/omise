<?xml version='1.0'?>
<config
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:noNamespaceSchemaLocation='urn:magento:framework:ObjectManager/etc/config.xsd'
>
	<virtualType name='Dfe\Omise\Validator\Enable' type='Df\Framework\Validator'>
		<arguments>
			<argument name='requirements' xsi:type='array'>
				<item xsi:type='object' name='currency'>Dfe\Omise\Requirement\Currency</item>
			</argument>
		</arguments>
	</virtualType>
	<virtualType name='Dfe\Omise\Requirement\Currency' type='Df\Framework\Requirement\Currency'>
		<arguments>
			<argument name='iso3' xsi:type='string'>THB,JPY</argument>
		</arguments>
	</virtualType>
</config>